generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model FileData {
  id        Int      @id @default(autoincrement())
  content   String
  cnpj     String
  fisrtDate String
  lastDate  String
  createdAt DateTime @default(now())
}


model NotaFiscal {
  id          Int       @id @default(autoincrement())
  numero      String   
  dataEntrada String
  fornecedor  String
  valor       Float
  tipo        Int
  itens       Item[]
  resumo      ResumoFiscal?
}

model Item {
  id          Int        @id @default(autoincrement())
  notaFiscal  NotaFiscal @relation(fields: [notaFiscalId], references: [id])
  notaFiscalId Int
  descricao   String
  quantidade  Float
  unidade     String
  valor       Float 
  cfop        String
  codigoProduto String
  grupo       String
  ncm         String
  icmsItem    Float
  baseItem    Float
  codMercadoria String
  aliquota Int @default(0)
}

model ResumoFiscal {
  id          Int        @id @default(autoincrement())
  notaFiscal  NotaFiscal @relation(fields: [notaFiscalId], references: [id])
  notaFiscalId Int       @unique
  baseCalculo Int 
  aliquota    Int 
  icmsDestacado Int
}

model ProcessingLock {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
}
